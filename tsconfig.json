{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "outDir": "./dist",
        "lib": [
            "es2017",
            "dom"
        ],
        "declaration": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "forceConsistentCasingInFileNames": true,
        "newLine": "LF",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true
    },
    "include": [
        "src/**/*"
    ]
}